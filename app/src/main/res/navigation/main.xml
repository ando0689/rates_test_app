<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main"
            app:startDestination="@id/currenciesFragment">

    <fragment android:id="@+id/currenciesFragment"
              android:name="com.example.currencies.ui.rates.RatesFragment"
              android:label="currencies_fragment"
              tools:layout="@layout/rates_fragment">

        <action android:id="@+id/showBankDetails"
                app:destination="@id/bankDetailsFragment"/>
    </fragment>

    <fragment android:id="@+id/bankDetailsFragment"
              android:name="com.example.currencies.ui.bankdetails.BankDetailsFragment"
              android:label="bank_details_fragment"
              tools:layout="@layout/bank_details_fragment">

        <argument
            android:name="bankId"
            app:argType="string"/>

        <argument
                android:name="branchId"
                app:argType="string"/>

    </fragment>
</navigation>